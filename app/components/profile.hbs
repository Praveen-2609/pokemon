<div class="container mx-auto">
    <div class="centre flex justify-center">

        <div class="flex bg-sky-400 border border-black p-5 m-3 ">
            <div class="px-3">
                <p class="font-extrabold text-2xl text-orange-600">PROFILE</p>
                <p><span class="font-bold">Height:</span> {{@profile.details.height}}cm</p>
                <p><span class="font-bold">Weight:</span> {{@profile.details.weight}}g</p>
                <p class="capitalize"><span class="font-bold">Abilities:</span> {{this.abilities}}</p>
                <p class="capitalize"><span class="font-bold">Egg Groups:</span> {{this.egggroups}}</p>
                <p class="capitalize"><span class="font-bold">Type:</span> {{this.types}}</p>
            </div>
            <div>
                <img class="scale-150" src={{@profile.details.sprites.front_default}}>
            </div>
        </div>
    </div>
    <div class="container mx-auto border border-black w-1/6 p-5 bg-teal-400 m-3">
        <p class="font-bold text-2xl text-blue-600	">STATS</p>
        {{#each @profile.details.stats as |stats|}}
        <div class="flex justify-between mb-1">
            <span class="text-base font-medium  dark:text-white capitalize">{{stats.stat.name}}</span>
            <span class="text-sm font-medium text-blue-700 dark:text-white">{{stats.base_stat}}</span>
        </div>
        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
            <div class="bg-blue-600 h-2.5 rounded-full" style={{progress-bar-width stats.base_stat}}></div>
        </div>
        {{/each}}
    </div>

    {{#if @profile.evolves.name}}
    <div class="flex justify-center">
        <div class="border border-black m-3 p-5 bg-yellow-500">
            <p class="font-bold text-2xl text-green-700 text-center">EVOLUTION</p>
            <div class="flex justify-center items-center">
                <img class="scale-125" src={{@profile.evolves.img.sprites.front_default}}>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                    <path d="M24 12l-12-8v5h-12v6h12v5z" />
                </svg>
                <img class="scale-125" src={{@profile.details.sprites.front_default}}>
            </div>
            <p><span class="capitalize font-semibold">{{@profile.evolves.name.name}}</span> evolves into <span
                    class="capitalize font-semibold">{{@profile.details.name}}</span></p>
        </div>
    </div>
    {{/if}}
</div>