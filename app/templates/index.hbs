{{page-title "Index"}}
<h3 class="container mx-auto text-blue-500 text-3xl font-bold text-center mb-5">Characters</h3>
<div class="flex justify-center ">
  {{!-- template-lint-disable require-input-label --}}
  <Input @value={{this.name}} class=" border border-fuchsia-500 rounded-lg" placeholder=" Search" />
</div>
<div class="container mx-auto grid grid-cols-6 gap-y-5 gap-x-4 p-5">
  {{#each this.characters as |pokemon|}}
  {{#if pokemon.isValid}}
  {{!-- template-lint-disable no-inline-styles --}}
  <div class="capitalize text-white text-center rounded-lg border border-black border-3" style={{pokemon-bg pokemon.types}}>

    <LinkTo @route='pokemon' @model={{pokemon.id}}>
      <div class="flex items-center flex-col"><img src={{pokemon.sprites.front_default}} alt={{pokemon.name}}><span class=" hover:font-black">{{pokemon.name}}</span></div>
    </LinkTo>
  </div>
  {{/if}}
  {{/each}}
</div>
{{outlet}}