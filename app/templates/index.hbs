{{page-title "Index"}}
<h3 class="container mx-auto text-blue-500 text-3xl font-bold text-center mb-10">Characters</h3>
<div class="flex justify-center mb-10">
  <Input @value={{this.name}} class=" border border-fuchsia-500 rounded-lg" placeholder="Search" />
</div>

<div class="container mx-auto grid grid-cols-6 gap-y-5 gap-x-4">
    {{#each this.characters as |pokemon id|}}
      {{#if pokemon.isValid}}
        <div class="capitalize text-white text-center rounded-lg bg-indigo-500 hover:bg-orange-500"><LinkTo @route='pokemon' @model={{(add id )}} class="">{{pokemon.name}}</LinkTo> </div>
      {{/if}}
    {{/each}}
</div>
{{outlet}}